<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_bg"
    tools:context=".jpark">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornerhead">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/top"
        android:layout_width="394dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/header"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-4dp" />

    <ScrollView
        android:layout_width="314dp"
        android:layout_height="608dp"
        android:background="@drawable/gray_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.475">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Jpark Thammasat Rangsit"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="139dp"
                android:background="#F4F4F4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:background="#F4F4F4"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="136dp"
                        android:layout_weight="1"
                        android:background="#F4F4F4"
                        android:paddingBottom="10dp"
                        app:srcCompat="@drawable/jpark_main" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F4F4F4"
                        android:fontFamily="@font/inter"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:text="ราคา/เดือน : 6,500 - 21,000 บาท/เดือน\nเงินประกัน :  2 เดือน\nจ่ายล่วงหน้า : 1 เดือน\nค่าไฟ : 200 บาทต่อห้อง/เดือน\nค่าน้ำ : 200 บาทต่อห้อง/เดือน\nค่าบริการอื่นๆ : 250 บาท\nค่าโทรศัพท์: โทรสอบถาม\nอินเตอร์เน็ต : ฟรี"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F4F4F4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:fontFamily="@font/inter"
                        android:padding="2dp"
                        android:text="ข้อมูลเพิ่มเติม"
                        android:textColor="#575757"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:fontFamily="@font/inter"
                        android:padding="3dp"
                        android:text="• ตู้เสื้อผ้า\n• เตียงนอน\n• ห้องน้ำ\n• ชั้น Build-in วาง TV\n• โต๊ะอเนกประสงค์พร้อมเก้าอี้\n• เครื่องปรับอากาศและเครื่องทำน้ำอุ่น\n• โต๊ะกลางและโซฟา\n• Free WIFI"
                        android:textColor="#575757"
                        android:textSize="10dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:background="#F4F4F4">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_1" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_2" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_3" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_4" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_5" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_6" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_7" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_8" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/jpark_9"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F4F4F4"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/jpark_map"
                        android:layout_width="match_parent"
                        android:layout_height="311dp"
                        android:background="#F4F4F4"
                        app:srcCompat="@drawable/jpark_m" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/moreinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:fontFamily="@font/inter"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="คำแนะนำเพิ่มเติม"
                android:textColor="#575757"
                android:textSize="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F4F4F4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/comment"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            app:srcCompat="@drawable/icons8_user_96" />
                        <TextView
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter"
                            android:paddingTop="8dp"
                            android:paddingEnd="60dp"
                            android:text="Pocchago\nNice modern and spacious studio apartments."
                            android:textColor="#575757"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/comment"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            app:srcCompat="@drawable/icons8_user_96" />

                        <TextView
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter"
                            android:paddingTop="8dp"
                            android:paddingEnd="60dp"
                            android:text="My Melody\nBasic clean service residence"
                            android:textColor="#575757"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="VIA CONTACT:"
                android:textSize="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:rotation="270"
                            app:srcCompat="@android:drawable/sym_action_call" />

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:textSize="12dp"
                            android:text="02-1534322 – 30" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            app:srcCompat="@drawable/facebook_logo_primary" />

                        <TextView
                            android:id="@+id/jpark_facebook"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:textSize="12dp"
                            android:text="@string/facebook_jpark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            app:srcCompat="@drawable/icons8_website_100"/>

                        <TextView
                            android:id="@+id/jpark_web"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:textSize="12dp"
                            android:text="@string/web_jpark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="30dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            app:srcCompat="@drawable/icons8_email_64__1_" />
                        <TextView
                            android:id="@+id/jpark_mail"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:textSize="12dp"
                            android:text="@string/mail_jpark"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/fav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:text="add to favorite"
                            android:textAlignment="textEnd"
                            android:textSize="12dp" />
                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:paddingRight="90dp"
                            app:srcCompat="@drawable/heart" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>