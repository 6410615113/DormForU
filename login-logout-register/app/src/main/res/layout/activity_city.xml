<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_bg"
    tools:context=".city">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornerhead">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/top"
        android:layout_width="394dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/header"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-4dp" />

    <ScrollView
        android:layout_width="314dp"
        android:layout_height="608dp"
        android:background="@drawable/gray_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.475">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="City Park ธรรมศาสตร์ รังสิต"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="139dp"
                android:background="#F4F4F4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:background="#F4F4F4"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="136dp"
                        android:layout_weight="1"
                        android:background="#F4F4F4"
                        android:paddingBottom="10dp"
                        app:srcCompat="@drawable/accom_main" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F4F4F4"
                        android:fontFamily="@font/inter"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:text="ราคา/เดือน : 6,000 - 7,000 บาท/เดือน\nเงินประกัน : 15000 บาท\nจ่ายล่วงหน้า : โทรสอบถาม\nค่าไฟ : 6 บาท/ยูนิต\nค่าน้ำ : 35 บาท/ยูนิต\nค่าบริการอื่นๆ : -\nค่าโทรศัพท์: ฟรี\nอินเตอร์เน็ต : ฟรี"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F4F4F4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:fontFamily="@font/inter"
                        android:padding="2dp"
                        android:text="ข้อมูลเพิ่มเติม"
                        android:textColor="#575757"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:fontFamily="@font/inter"
                        android:padding="3dp"
                        android:text="• Cable TV\n• สระว่ายน้ำ\n• ห้องอ่านหนังสือ\n• ห้องฟิตเนส์\n• Internet WiFi ในพื้นที่ส่วนกลาง และใน Lobby ของแต่ละอาคาร"
                        android:textColor="#575757"
                        android:textSize="10dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:background="#F4F4F4">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/city_1" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/city_2" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/city_3" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/city_4" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/city_5" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/city_6" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/city_7" />
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F4F4F4"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/city_map"
                        android:layout_width="match_parent"
                        android:layout_height="311dp"
                        android:background="#F4F4F4"
                        app:srcCompat="@drawable/city_m" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/moreinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:fontFamily="@font/inter"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="คำแนะนำเพิ่มเติม"
                android:textColor="#575757"
                android:textSize="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F4F4F4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/comment"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            app:srcCompat="@drawable/icons8_user_96" />
                        <TextView
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter"
                            android:paddingTop="8dp"
                            android:paddingEnd="60dp"
                            android:text="Pompompurin\nร้านค้า  ของกินเยอะกว่าทุกหอในย่านนี้"
                            android:textColor="#575757"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@drawable/comment"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            app:srcCompat="@drawable/icons8_user_96" />

                        <TextView
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter"
                            android:paddingTop="8dp"
                            android:paddingEnd="60dp"
                            android:text="My Melody\nหอพักที่ใหญ่โต ล็อบบี้หรูมาก มีร้านกาแฟน่านั่งหลายร้าน"
                            android:textColor="#575757"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="VIA CONTACT:"
                android:textSize="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:rotation="270"
                            app:srcCompat="@android:drawable/sym_action_call" />

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:textSize="12dp"
                            android:text="089-114-8999" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            app:srcCompat="@drawable/facebook_logo_primary" />

                        <TextView
                            android:id="@+id/city_facebook"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:textSize="12dp"
                            android:text="@string/facebook_city" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="30dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            app:srcCompat="@drawable/icons8_website_100"/>

                        <TextView
                            android:id="@+id/city_web"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:textSize="12dp"
                            android:text="@string/web_city" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F4F4F4"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/fav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F4F4"
                            android:fontFamily="@font/inter"
                            android:text="add to favorite"
                            android:textAlignment="textEnd"
                            android:textSize="12dp" />
                        <Button
                            android:id="@+id/favBtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_favorite_shadow_24dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginBottom="18dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>